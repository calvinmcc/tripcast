<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
    <body>
      <div class="options">
        <div class="gasIcon">
          ‚õΩÔ∏è <input type="checkbox" id="gas" value="gas">
        </div>
        <div class="hotelIcon">
          üè® <input type="checkbox" id="hotel" value="hotel">
        </div>
      </div>
      <div id="directionsPanel">
        <% if user_signed_in? %>
          <%= form_for @trip do |f| %>
          <div>
            <%= f.label :start %>
            <%= f.text_field :start %>
          </div>
          <div>
            <%= f.label :end %>
            <%= f.text_field :end %>
          </div>
          <div>
            <%= f.label :departure %>
            <%= f.text_field :departure %>
          </div>
          <div>
          </div>
            <input type="button" name="trip_go" value="GO!" id="go">
            <%= f.submit id: 'go', value: 'Save Trip!'%>
            <% end %>
        <% else %>
          <label for="trip_start">Start: </label>
          <input type="text" name="trip_start" id="trip_start" value="milwaukee">
          <br>
          <label for="trip_end">End: </label>
          <input type="text" name="trip_end" id="trip_end" value="la crosse, wi">
          <br>
          <label for="trip_departure">Departure Time: </label>
          <input type="text" name="trip_departure" id="trip_departure">
          <br>
          <input type="button" name="trip_go" value="GO!" id="go">
          <br>
        <% end %>
        <div id="tripDetails" style="display: none">
          <p>Travel time: <span id="tripTime"></span></p>
        </div>
        <ul id="stepList"></ul>
          <script type="x-tmpl-mustache" id="stepTemp">
          {{#.}}
            <li id={{i}} class="directionList">
              {{i}}
              {{{step}}},
              {{weatherData.currently.summary}},
              {{{precip}}}% chance of precipitation,
              {{temp}}&deg;F
            </li>
          {{/.}}
          </script>
        </div>
      </div>
      <div id="map"></div>
      <div id="footer"><img src="/assets/darksky.png" /></div>
      <script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GMAPS_KEY']%>&libraries=places&callback=initMap" async defer></script>
      <link rel="stylesheet" href="https://unpkg.com/flatpickr/dist/flatpickr.min.css">
      <script src="https://unpkg.com/flatpickr"></script>
      <script type="text/javascript">
        flatpickr("#trip_departure", {
          defaultDate: Date.now(),
          enableTime: true,
          altInput: true,
          altFormat: "F j, Y h:i K"
        });
      document.getElementById("trip_departure").flatpickr(config);
      let calendar = new Flatpickr(element, config);
      $(".selector").flatpickr({});
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.min.js"></script>
  </body>
</html>
