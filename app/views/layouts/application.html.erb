<!DOCTYPE html>
<html>
  <head>
    <title>Tripcast2</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'false' %>
  </head>
  <link href="https://fonts.googleapis.com/css?family=Gudea|Hammersmith+One|Nunito+Sans" rel="stylesheet">
  <body>
    <%= alert || notice %>
    <div class="navbar">
      <% if current_user.nil? %>
        <div class="navbar-left">
          <%= link_to 'Sign In', new_session_path %> |
          <%= link_to 'Sign Up', new_user_path %>
        </div>
      <% else %>
        <div class="navbar-left">
          <%= link_to 'Sign Out', sessions_path, method: :delete %> |
          <%= link_to "Hey #{current_user.first_name}!", user_path(current_user) %>
        </div>
      <% end %>
      <div class="title"><a href="<%= root_path %>">ðŸ”† tripcast</a></div>
    </div>
    <%= yield %>
  </body>
</html>
