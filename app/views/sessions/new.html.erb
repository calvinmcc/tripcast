<div class="new-user">
  <h3 class="sign-in">Sign In: &nbsp;</h3>
  <%= form_tag sessions_path do %>
    <div>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag 'Sign In', class: 'button' %>
  <% end %>
</div>
